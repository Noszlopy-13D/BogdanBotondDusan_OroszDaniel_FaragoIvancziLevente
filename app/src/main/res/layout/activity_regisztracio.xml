<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Regisztracio">

    <!-- White Box with Rounded Corners -->
    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="64dp">

        <!-- Username Field -->
        <EditText
            android:id="@+id/felhasznalonev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Felhasználónév"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:backgroundTint="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/Email_regisztacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:backgroundTint="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/Jelszo_regisztracio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jelszó"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:backgroundTint="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Confirm Password Field -->
        <EditText
            android:id="@+id/Jelszo_megerositese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jelszó megerősítése"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:backgroundTint="#000000"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Register Button -->
    <Button
        android:id="@+id/Regisztracio_vegrehajtas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regisztráció"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/form_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
